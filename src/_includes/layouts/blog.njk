<div class="title" data-title-type="blog">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="flow">
        <h1>{{ title | titleCaseFilter }}</h1>
        <div class="title__meta cluster">
          <p>
            <strong>{{ author.name }}</strong>,
            {% set publishedDate = page.date %}
            <time datetime="{{ publishedDate | htmlDateFilter }}"
              >{{ publishedDate | blogDateFilter }}</time
            >
          </p>
          <p>Estimated reading time: <strong>{{ content | timeToRead("200 words a minute") }}</strong></p>
        </div>
      </div>
    </div>
  </div>
</div>
{% if banner and message.description and message.button and message.link %}
  {% include "banner.njk"%}
{% endif %}
<div class="prose" data-prose-type="blog" data-prose-body-size="bigger">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="prose__article flow">
        {{ content | safe }}
        <a href="mailto:{{ site.email }}" class="button">
          Share your thoughts
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            aria-hidden="true"
            focusable="false"
            fill="currentColor"
          >
            <use href="#arrow-up-right"></use>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
{% if advert %}
<div class="prose" data-prose-body-size="bigger">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="prose__article flow">
        {% include "ads.njk"%}
      </div>
    </div>
  </div>
</div>
{% endif %}
<div class="topics" data-topics-type="blog">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="cluster">
        <h2>Topic(s).</h2>
        {% include "blog/categories.njk" %}
      </div>
    </div>
  </div>
</div>
<div class="prose">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="request">
        <div class="prose__article">
          <p>
            Thank you for reading this
            <strong><a href="{{ page.url }}">{{ title | titleCaseFilter }}</a></strong
            >. You can subscribe to all my articles with the
            <a href="/feed.xml">Articles RSS</a>. If you have a positive or
            <em>negative</em> comment, please send me an
            <a href="mailto:{{ site.email }}">email</a> or contact me through one of my social
            media accounts.
          </p>
        </div>
      </div>
      <div class="request">
        <div class="flow prose__article">
          <h2>Share with your network</h2>
          <p>Copy this link and send it to great people only.</p>
          <p><code>{{ site.url }}{{ page.url }}</code></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="articles" data-articles-type="blog">
  <div class="wrapper">
    <div class="wrapper flow" data-wrapper-type="inner">
      <h2>For you</h2>
      {% set blogList = collections.blog | shuffleFilter(numberOfRecommendation) %}
      {% set useHeadingThree = true %}
      <ul class="articles__list grid" role="list">
        {% include "blog/list.njk" %}
      </ul>
    </div>
  </div>
</div>
