<div class="hero" data-hero-type="blog">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <h1>{{ title | titleCaseFilter }}</h1>
      <div class="hero__meta cluster">
        <p>
          <strong>Published:</strong>
          {% set publishedDate = page.date %}
          <time datetime="{{ publishedDate | htmlDateFilter }}"
            >{{ publishedDate | blogDateFilter }}</time
          >
        </p>
        <p><strong>Written by:</strong> {{ author.name }}</p>
      </div>
    </div>
  </div>
</div>
<div class="prose" data-prose-type="blog">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="prose__article flow">
        {{ content | safe }}
        <a href="mailto:{{ site.email }}" class="button">
          Share your thoughts
          <svg
            width="24"
            height="24"
            viewBox="0 0 24 24"
            aria-hidden="true"
            focusable="false"
            fill="currentColor"
          >
            <use href="#arrow-up-right"></use>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="topics" data-topics-type="blog">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <div class="cluster">
        <h2>Topic(s).</h2>
        {% include "blog/categories.njk" %}
      </div>
    </div>
  </div>
</div>
<aside class="articles" data-articles-type="blog" aria-labelledby="aside-for-you">
  <div class="wrapper">
    <div class="wrapper" data-wrapper-type="inner">
      <h2 id="aside-for-you">For you</h2>
    </div>
    {% set blogList = collections.blog | shuffleFilter(2) %}
    {% set useHeadingThree = true %}
    {% include "blog/list.njk" %}
  </div>
</aside>
